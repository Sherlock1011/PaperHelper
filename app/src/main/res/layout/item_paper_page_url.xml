<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_marginTop="1dp">

    <com.example.lib_common_ui.custom_view.ShadowLayout
        android:id="@+id/page_list_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:sl_shadow_angle="45"
        app:sl_shadow_color="#74000000"
        app:sl_shadow_distance="3dp"
        app:sl_shadow_radius="3dp"
        app:sl_shadowed="true"
        tools:ignore="MissingConstraints">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/page_url_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Website Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/page_url_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="https://lib.must.edu.mo/"
                android:textColor="#757474" />

        </com.qmuiteam.qmui.layout.QMUILinearLayout>


    </com.example.lib_common_ui.custom_view.ShadowLayout>

</androidx.constraintlayout.widget.ConstraintLayout>